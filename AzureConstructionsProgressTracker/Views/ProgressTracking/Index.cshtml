@model IEnumerable<Common.ProgressTrackingEntry>

@{
    ViewBag.Title = "Progress tracking";
}

<h2>Progress tracking</h2>

<p>
    @Html.ActionLink("Add new entry", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            Project
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EntryDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PictureReference)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ConstructionProject.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EntryDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        <td>
            @if (!string.IsNullOrWhiteSpace(item.ThumbnailPictureReference))
            {
                <img src="@item.ThumbnailPictureReference" alt="Uploaded picture" style="max-height: 100px"/>
            }
            else if (!string.IsNullOrWhiteSpace(item.PictureReference))
            {
                <img src="@item.PictureReference" alt="Uploaded picture" style="max-height: 100px" />
            }
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default btn-sm" })
        </td>
    </tr>
}

</table>
